<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gt.florian.colazoprueba.AyudaAsistencia">



    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ibPolicia"
        android:src="@drawable/policia"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ibHopital"
        android:src="@drawable/hospital"
        android:layout_alignTop="@+id/ibPolicia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ibPrevencion"
        android:src="@drawable/prevencion"
        android:layout_below="@+id/ibHopital"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="141dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ibAuxilios"
        android:src="@drawable/primeros_auxilios"
        android:layout_alignTop="@+id/ibPrevencion"
        android:layout_alignLeft="@+id/ibHopital"
        android:layout_alignStart="@+id/ibHopital" />

</RelativeLayout>
